@model Product
<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 my-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Product</h2>
			<hr>
		</div>
		<div asp-validation-summary="ModelOnly"></div> @*//summary is for all validation*@
		<div class="mb-3">
			<label asp-for="Title" class="p-0"></label>
			<input asp-for="Title" class="form-control">
		@*//validation is for individual*@
		</div>
		<div class="mb-3">
			<label asp-for="Description" class="p-0"></label>
			<input asp-for="Description"disabled class="form-control">
			
		</div>

		<div class="mb-3">
			<label asp-for="ISBN" class="p-0"></label>
			<input asp-for="ISBN"disabled class="form-control">
			
		</div>

		<div class="mb-3">
			<label asp-for="Author" class="p-0"></label>
			<input asp-for="Author"disabled class="form-control">
			
		</div>

		<div class="mb-3">
			<label asp-for="ListPrice" class="p-0"></label>
			<input asp-for="ListPrice"disabled class="form-control">
			
		</div>

		<div class="mb-3">
			<label asp-for="Price" class="p-0"></label>
			<input asp-for="Price" disabled class="form-control">
			
		</div>

		<div class="mb-3">
			<label asp-for="Price50" class="p-0"></label>
			<input asp-for="Price50" disabled class="form-control">
			
		</div>
		<div class="mb-3">
			<label asp-for="Price100" class="p-0"></label>
			<input asp-for="Price100" disbaled class="form-control">
			
		</div>

		<button type="submit" class="btn btn-danger" style="width: 150px">Delete</button>
		<a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
